<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <EditText
        android:id="@+id/enterReg"
        android:layout_width="300dp"
        android:layout_height="80dp"
        android:layout_marginBottom="45dp"
        android:ems="10"
        android:hint="Registration Number"
        android:inputType="textPersonName"
        android:layout_above="@+id/enterInsurance"
        android:layout_centerHorizontal="true" />

    <EditText
        android:id="@+id/enterInsurance"
        android:layout_width="300dp"
        android:layout_height="80dp"
        android:ems="10"
        android:hint="Insurance"
        android:inputType="date"
        android:layout_marginBottom="46dp"
        android:layout_above="@+id/updateInsurance"
        android:layout_alignLeft="@+id/enterReg"
        android:layout_alignStart="@+id/enterReg" />

    <Button
        android:id="@+id/updateInsurance"
        android:layout_width="198dp"
        android:layout_height="wrap_content"
        android:onClick="updateInsurance"
        android:text="Update"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <Button
        android:id="@+id/buttonHome"
        android:layout_width="198dp"
        android:layout_height="wrap_content"
        android:onClick="home"
        android:text="Home"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />
</RelativeLayout>