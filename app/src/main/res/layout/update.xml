<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <Button
        android:id="@+id/button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:onClick="home"
        android:text="Home" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="121dp"
        android:text="Select detail to update"
        android:textAlignment="center"
        android:textSize="20dp" />

    <Button
        android:id="@+id/buttonInsurance"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="66dp"
        android:text="Insurance"
        android:onClick="insurance"
        android:layout_below="@+id/textView"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="53dp"
        android:layout_marginStart="53dp" />

    <Button
        android:id="@+id/buttonTax"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/buttonInsurance"
        android:layout_alignLeft="@+id/buttonInsurance"
        android:layout_alignRight="@+id/buttonInsurance"
        android:layout_alignStart="@+id/buttonInsurance"
        android:layout_below="@+id/buttonInsurance"
        android:layout_marginTop="32dp"
        android:onClick="tax"
        android:text="Tax" />

    <Button
        android:id="@+id/buttonMOT"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="33dp"
        android:onClick="mot"
        android:text="MOT"
        android:layout_below="@+id/buttonTax"
        android:layout_alignRight="@+id/buttonTax"
        android:layout_alignEnd="@+id/buttonTax" />
</RelativeLayout>