<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.jibby.licensecheckeronline.MainActivity">

    <EditText
        android:id="@+id/enterReg"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginTop="109dp"
        android:layout_toLeftOf="@+id/buttonSearch"
        android:layout_toStartOf="@+id/buttonSearch"
        android:ems="10"
        android:hint="Enter Reg Number"
        android:inputType="textPersonName" />

    <Button
        android:id="@+id/buttonSearch"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/enterReg"
        android:layout_marginBottom="36dp"
        android:layout_toEndOf="@+id/buttonAddCar"
        android:layout_toRightOf="@+id/buttonAddCar"
        android:onClick="OnLogin"
        android:text="Search" />

    <Button
        android:id="@+id/buttonAddCar"
        android:layout_width="133dp"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:onClick="OpenReg"
        android:text="Add Vehicle" />

    <Button
        android:id="@+id/buttonDelete"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/enterReg"
        android:layout_marginTop="23dp"
        android:layout_toEndOf="@+id/enterReg"
        android:layout_toRightOf="@+id/enterReg"
        android:onClick="OnDelete"
        android:text="Delete" />

    <Button
        android:id="@+id/buttonUpdate"
        android:layout_width="133dp"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:onClick="OnUpdate"
        android:text="Update" />

    <Button
        android:id="@+id/buttonAll"
        android:layout_width="133dp"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:onClick="ViewAll"
        android:text="View All" />

    <Button
        android:id="@+id/buttonHome"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/buttonAddCar"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="65dp"
        android:text="Home"
        android:onClick="home"/>

</RelativeLayout>
